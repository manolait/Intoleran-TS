<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0.61">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="317dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false" >
            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tlf"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/composicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false" />

            <Button
                android:id="@+id/button"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button1"
                android:text="@string/Volver" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compruebe siempre el etiquetado del producto antes de ser consumido."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#AE0000" />
        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ImgFoto"
                android:layout_width="71dp"
                android:layout_height="71dp" />

            <ImageView
                android:id="@+id/Imagen_Marisco"
                android:layout_width="71dp"
                android:layout_height="71dp" />

            <ImageView
                android:id="@+id/Imagen_Gluten"
                android:layout_width="71dp"
                android:layout_height="71dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/Imagen_sinlactosa"
                android:layout_width="71dp"
                android:layout_height="71dp" />

            <ImageView
                android:id="@+id/Imagen_Sin_Marisco"
                android:layout_width="71dp"
                android:layout_height="71dp" />

            <ImageView
                android:id="@+id/Imagen_Sin_Gulten"
                android:layout_width="71dp"
                android:layout_height="71dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>